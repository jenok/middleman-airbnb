<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<div class="wrapper">
  <%= image_tag "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}", width: "100%", height: "300px" %>
</div>
<!-- Inject flat data in template -->

<div class="wrapper-white profile_wrapper row">

  <div class="profile_info col-xs-12 col-md-4">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width: "150px"%>
    <p><%= flat.name %></p>
  </div>

  <div class="profile_description col-xs-12 col-md-4">
    <h4><%= flat.description %></h4>
    <p><%= flat.city_name %></p>

    <% for i in (0...flat.rating) %>
    <i class="fa fa-star star"></i>
    <% end %>
  </div>

  <div class="form col-xs-12 col-md-4">
    <form class="form">
      <div class="form-group">
        <p>Book this flat</p>
        <label for="checkin">checkin</label>
        <input type="date" class="form-control" id="checkin" placeholder="checkin">
      </div>
      <div class="form-group">
        <label for="checkout">checkout</label>
        <input type="date" class="form-control" id="checkout" placeholder="checkout">
      </div>
      <div class="form-group">
        <label for="guest">number of guests</label>
        <select class="form-control" id="guest">
          <option>1 guest</option>
          <option>2 guests</option>
          <option>3 guests</option>
        </select>
      </div>
    </form>
  </div>

</div>

<div class="wrapper-gray container">
  <h3>About this flat</h3>
  <%= flat.info %>


  <div class="space">
    <p>The Space</p>
    <div class="info">
      <p> Accommodates: <%= flat.accommodates %> </p>
      <p> Bathrooms: <%= flat.bathrooms %> </p>
      <p> Bed type: <%= flat.bedtype %> </p>
      <p> Bedrooms: <%= flat.bedrooms %> </p>
    </div>
    <div class="info">
      <p> Beds: <%= flat.beds %></p>
      <p> Property type: <%= flat.property %></p>
      <p> Room type: <%= flat.room %></p>
    </div>


  </div>

</div>
